<UserControl x:Class="StatementModule.Views.MainStatementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600"
             >
    <DockPanel>
        <StackPanel Orientation="Horizontal" Height="34" DockPanel.Dock="Top">
            <Button Content="Statement list" Margin="2" FontSize="12"
                     Command="{Binding NavigateCommand}" CommandParameter="StatementList"></Button>
            <Button Content="Statement View" Margin="2" FontSize="12"
                     Command="{Binding NavigateCommand}" CommandParameter="StatementView"></Button>
        </StackPanel>
        <ContentControl prism:RegionManager.RegionName="StatementContentRegion"/>
    </DockPanel>
</UserControl>
